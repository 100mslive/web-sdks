{
  "version": "0.2.80-alpha.0",
  "license": "MIT",
  "main": "dist/hms-video-store.cjs.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "prestart": "rm -rf dist",
    "start": "node ./scripts/dev && yarn types",
    "build:only": "node ./scripts/build",
    "build": "node ./scripts/build && yarn types:build",
    "types": "tsc -w",
    "types:build": "tsc -p tsconfig.build.json && tsconfig-replace-paths -p tsconfig.build.json",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint -c ../../.eslintrc .",
    "lint:fix": "yarn lint --fix",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "cypress:open": "cypress open",
    "docs": "rm -rf ./docs && typedoc && rm -f ./docs/README.md && mkdir ./docs/home &&mv ./docs/modules.md ./docs/home/content.md && ./bin/typedoc-mdx && npx prettier --write './docs/**/*'"
  },
  "name": "@100mslive/hms-video-store",
  "author": "100ms",
  "module": "dist/hms-video-store.esm.js",
  "sideEffects": false,
  "dependencies": {
    "eventemitter2": "^6.4.5",
    "immer": "^9.0.6",
    "reselect": "4.0.0",
    "zustand": "3.5.7"
  },
  "peerDependencies": {
    "@100mslive/hms-video": "^0.1.32"
  },
  "devDependencies": {
    "@100mslive/hms-video": "^0.1.32",
    "@cypress/code-coverage": "^3.9.11",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "babel-plugin-istanbul": "^6.1.1",
    "cypress": "^8.7.0",
    "dotenv": "^10.0.0",
    "istanbul-lib-coverage": "^3.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.4.0",
    "tsconfig-replace-paths": "^0.0.11",
    "tslib": "^2.2.0",
    "typedoc": "^0.21.5",
    "typedoc-plugin-markdown": "^3.10.4"
  },
  "description": "This is an addon to the core sdk provided by 100ms. It abstracts away the intricacies of data management and provides a flux based reactive data store where data flows in only one direction.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/100mslive/hms-video-store.git"
  },
  "keywords": [
    "video",
    "webrtc",
    "conferencing",
    "100ms"
  ],
  "bugs": {
    "url": "https://github.com/100mslive/hms-video-store/issues"
  },
  "homepage": "https://github.com/100mslive/hms-video-store#readme",
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "include": [
      "src/core/hmsSDKStore/**/*.ts",
      "src/core/selectors/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".js"
    ],
    "exclude": [
      "**/*.spec.ts"
    ],
    "report-dir": "cy-coverage"
  }
}
