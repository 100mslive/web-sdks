{
  "version": "0.2.75",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage",
    "lint": "tsdx lint",
    "lint:fix": "tsdx lint --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "cypress:open": "cypress open",
    "docs": "rm -rf ./docs && typedoc && rm -f ./docs/README.md && mkdir ./docs/home &&mv ./docs/modules.md ./docs/home/content.md && ./bin/typedoc-mdx && npx prettier --write './docs/**/*'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint --fix"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "name": "@100mslive/hms-video-store",
  "author": "100ms",
  "module": "dist/hms-video-store.esm.js",
  "sideEffects": false,
  "size-limit": [
    {
      "path": "dist/hms-video-store.cjs.production.min.js",
      "limit": "20 KB"
    },
    {
      "path": "dist/hms-video-store.esm.js",
      "limit": "100 KB"
    }
  ],
  "dependencies": {
    "eventemitter2": "^6.4.5",
    "immer": "^9.0.6",
    "reselect": "^4.0.0",
    "zustand": "3.5.7"
  },
  "peerDependencies": {
    "@100mslive/hms-video": "^0.1.26"
  },
  "devDependencies": {
    "@100mslive/hms-video": "^0.1.26",
    "@cypress/code-coverage": "^3.9.11",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@size-limit/file": "^5.0.3",
    "babel-plugin-istanbul": "^6.1.1",
    "cypress": "^8.7.0",
    "dotenv": "^10.0.0",
    "husky": "^6.0.0",
    "istanbul-lib-coverage": "^3.2.0",
    "nyc": "^15.1.0",
    "size-limit": "^5.0.3",
    "ts-node": "^10.4.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typedoc": "^0.21.5",
    "typedoc-plugin-markdown": "^3.10.4",
    "typescript": "^4.3.2"
  },
  "description": "This is an addon to the core sdk provided by 100ms. It abstracts away the intricacies of data management and provides a flux based reactive data store where data flows in only one direction.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/100mslive/hms-video-store.git"
  },
  "keywords": [
    "video",
    "webrtc",
    "conferencing",
    "100ms"
  ],
  "bugs": {
    "url": "https://github.com/100mslive/hms-video-store/issues"
  },
  "resolutions": {
    "tsdx/**/node-notifier": "10.0.0",
    "**/@typescript-eslint/eslint-plugin": "^4.11.1",
    "**/@typescript-eslint/parser": "^4.11.1",
    "**/jest": "^26.6.3",
    "**/ts-jest": "^26.4.4",
    "**/typescript": "^4.4.4"
  },
  "homepage": "https://github.com/100mslive/hms-video-store#readme",
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary",
      "html"
    ],
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "include": [
      "src/core/hmsSDKStore/**/*.ts",
      "src/core/selectors/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".js"
    ],
    "exclude": [
      "**/*.spec.ts"
    ],
    "report-dir": "cy-coverage"
  }
}
